= error_messages_for :load

- form_for @load, :html => { :id => 'load' } do |f|

  %p
    = f.label :date, 'Date:'
    = f.date_select :date, { :order => [:month, :day, :year] }

    = render :partial => 'aircraft', :locals => { :f => f }

    = f.label :pilot_id, 'Pilot:'
    = f.collection_select(:pilot_id, Account.pilots, :id, :name)

  #slots
    = render :partial => 'slot', :collection => @load.slots

  .submit
    = f.submit "Submit"

  = add_slot_link "Add a Slot"

= set_focus_to_first_aircraft
= javascript_include_tag 'manifest_events', 'aircraft_selection'