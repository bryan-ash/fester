<h1>Editing load</h1>

<% form_for(@load) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.label :aircraft_id %><br />
    <%= f.text_field :aircraft_id %>
  </p>
  <p>
    <% for slot in @load.slots %>
      <% fields_for "load[slots_on_load][]", slot do |slot_form| %>
        <%= collection_select(:slot, :jumper_id, Jumper.find(:all), :id, :name) %>
      <% end %>
    <% end %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @load %> |
<%= link_to 'Back', loads_path %>
