var jump_type_costs = new Array;

<% for jump_type in @jump_types -%>
  jump_type_costs.push(new Array(<%= jump_type.id %>, <%= jump_type.cost %>));
<% end -%>

function populate_slot_cost(item) {
  var jump_type = item.closest(".slot").find(".jump_type")

  jQuery.each(jump_type_costs, function (index, jump_type_cost) {
    if (jump_type_cost[0] == jump_type.val()) {
      item.val(jump_type_cost[1]);
    }
  });
}

$(document).ready(function () {
  $(".cost").each(function () {
    if ($(this).val() == "") {
      populate_slot_cost($(this));
    }
  });

  $(".jump_type").change(function () {
    populate_slot_cost($(this).closest(".slot").find(".cost"));
  });
});
