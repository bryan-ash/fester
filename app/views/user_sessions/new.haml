- form_for @user_session do |f|

  %fieldset#login
    %legend Login
    %p
      = f.label :username, 'Username/Email'
      = f.text_field :username, :class => 'input'

    %p
      = f.label :password
      = f.password_field :password, :class => 'input'

    %p
      = link_to 'Lost Password', new_password_reset_path, :class => 'lost_password'
      = f.submit 'Submit', :class => 'submit'

= set_focus_to_id 'user_session_username'

