<% form_for @user_session do |f| %>

  <%= f.error_messages :header_message => "Please Try Again!", :message => "The following errors were found:" %>
  
  <h1>Login</h1>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>

<% end -%> 

<%= set_focus_to_id 'user_session_username' %>
